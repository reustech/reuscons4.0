---
import Layout from '../layouts/Layout.astro';
import IndexCard from '../components/IndexCard.jsx';
import AdminDashboard from '../components/composed/DashboardAdmin/AdminDashboard.jsx';
import ClickableCard from '../components/composed/DashboardAdmin/ClickableCard.jsx';

import {
  Users,
  SquareKanban,
  FileText,
  Building2,
  BarChart3,
  Settings,
  Shield,
  AlertCircle,
  TrendingUp,
  Lock,
  Trash2,
  Zap,
  Database,
  Users2,
  CheckCircle,
  Calendar,
  MessageSquare,
  ClipboardList,
  PieChart,
  Activity,
  Download,
  Upload,
  Inbox,
  BookOpen,
  Mail,
  Phone,
  MapPin,
  Eye,
  Edit,
  ToggleLeft,
  Archive
} from 'lucide-react';
---

<Layout title="Dashboard Administrativo - Reuscons">

	<AdminDashboard client:load />

	<main class="container">
		<section style={{ textAlign: 'center', marginBottom: '3rem' }}>
			<h1>Panel Administrativo</h1>
		</section>

		<!-- GESTIÓN DE USUARIOS -->
		<section style={{ marginBottom: '4rem' }}>
			<h2 style={{ marginBottom: '1.5rem', borderBottom: '2px solid var(--primary)', paddingBottom: '0.5rem', display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
				<Users size={48} /> Gestión de Usuarios
			</h2>
			<section style={{
				display: 'grid',
				gridTemplateColumns: 'repeat(3, 1fr)',
				gap: '1rem'
			}}>
				<ClickableCard client:load iconName="Users2" title="Crear Usuario" description="Agregar nuevos usuarios al sistema. Asignar roles y permisos iniciales." data-modal-type="user" data-modal-action="create" />
				<ClickableCard client:load iconName="Users" title="Ver Usuarios" description="Listar todos los usuarios del sistema. Ver detalles, roles y estados." data-modal-type="user" data-modal-action="list" />
				<ClickableCard client:load iconName="Edit" title="Editar Usuarios" description="Modificar datos de usuarios. Cambiar roles y asignaciones de equipo." data-modal-type="user" data-modal-action="edit" />
				<ClickableCard client:load iconName="Trash2" title="Eliminar Usuarios" description="Remover usuarios del sistema. Gestionar el acceso y datos históricos." data-modal-type="user" data-modal-action="delete" />
			</section>
		</section>

		<!-- GESTIÓN DE PROYECTOS Y OBRAS -->
		<section style={{ marginBottom: '4rem' }}>
			<h2 style={{ marginBottom: '1.5rem', borderBottom: '2px solid var(--primary)', paddingBottom: '0.5rem', display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
				<Building2 size={48} /> Gestión de Proyectos y Obras
			</h2>
			<section style={{
				display: 'grid',
				gridTemplateColumns: 'repeat(3, 1fr)',
				gap: '1rem'
			}}>
				<ClickableCard client:load iconName="Building2" title="Crear Proyecto" description="Crear nuevo proyecto. Asignar equipos y presupuestos iniciales." data-modal-type="project" data-modal-action="create" />
				<ClickableCard client:load iconName="Building2" title="Ver Proyectos" description="Listar todos los proyectos activos. Ver estados y progreso general." data-modal-type="project" data-modal-action="list" />
				<ClickableCard client:load iconName="Edit" title="Editar Proyectos" description="Modificar información de proyectos. Actualizar plazos y objetivos." data-modal-type="project" data-modal-action="edit" />
				<ClickableCard client:load iconName="Trash2" title="Eliminar Proyectos" description="Remover proyectos del sistema. Gestionar datos históricos." data-modal-type="project" data-modal-action="delete" />
			</section>
		</section>

		<!-- GESTIÓN DE TAREAS Y KANBAN -->
		<section style={{ marginBottom: '4rem' }}>
			<h2 style={{ marginBottom: '1.5rem', borderBottom: '2px solid var(--primary)', paddingBottom: '0.5rem', display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
				<SquareKanban size={48} /> Gestión de Tareas y Kanban
			</h2>
			<section style={{
				display: 'grid',
				gridTemplateColumns: 'repeat(3, 1fr)',
				gap: '1rem'
			}}>
				<ClickableCard client:load iconName="SquareKanban" title="Crear Tablero" description="Crear nuevo tablero Kanban personalizado. Definir columnas y flujos de trabajo." data-modal-type="kanban" data-modal-action="create" />
				<ClickableCard client:load iconName="SquareKanban" title="Ver Tableros" description="Listar todos los tableros Kanban disponibles. Ver estados y configuración." data-modal-type="kanban" data-modal-action="list" />
				<ClickableCard client:load iconName="Edit" title="Editar Tablero" description="Modificar configuración de tableros. Renombrar y reordenar columnas." data-modal-type="kanban" data-modal-action="edit" />
				<ClickableCard client:load iconName="Trash2" title="Eliminar Tablero" description="Remover tableros del sistema. Gestionar datos históricos." data-modal-type="kanban" data-modal-action="delete" />
			</section>
		</section>

		<!-- GESTIÓN DE ARCHIVOS -->
		<section style={{ marginBottom: '4rem' }}>
			<h2 style={{ marginBottom: '1.5rem', borderBottom: '2px solid var(--primary)', paddingBottom: '0.5rem', display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
				<FileText size={48} /> Gestión de Archivos
			</h2>
			<section style={{
				display: 'grid',
				gridTemplateColumns: 'repeat(3, 1fr)',
				gap: '1rem'
			}}>
				<ClickableCard client:load iconName="Upload" title="Subir Archivo" description="Agregar nuevos archivos al servidor. Control de versiones." data-modal-type="file" data-modal-action="upload" />
				<ClickableCard client:load iconName="FileText" title="Ver Archivos" description="Listar todos los archivos del sistema. Filtrar por tipo, fecha y usuario." data-modal-type="file" data-modal-action="list" />
				<ClickableCard client:load iconName="Download" title="Descargar Archivos" description="Descargar archivos del sistema. Gestionar descargas por usuario." data-modal-type="file" data-modal-action="download" />
				<ClickableCard client:load iconName="Edit" title="Editar Metadatos" description="Modificar información de archivos. Renombrar y reclasificar." data-modal-type="file" data-modal-action="edit" />
				<ClickableCard client:load iconName="Trash2" title="Eliminar Archivos" description="Remover archivos del sistema. Gestionar espacio de almacenamiento." data-modal-type="file" data-modal-action="delete" />
			</section>
		</section>

		<!-- REPORTES Y ANÁLISIS -->
		<section style={{ marginBottom: '4rem' }}>
			<h2 style={{ marginBottom: '1.5rem', borderBottom: '2px solid var(--primary)', paddingBottom: '0.5rem', display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
				<BarChart3 size={48} /> Reportes y Análisis
			</h2>
			<section style={{
				display: 'grid',
				gridTemplateColumns: 'repeat(3, 1fr)',
				gap: '1rem'
			}}>
				<IndexCard Icon={Activity} title="Actividad del Sistema" description="Monitoreo de actividad en tiempo real. Eventos y cambios recientes." />
				<IndexCard Icon={Database} title="Exportar Datos" description="Exportar información en diferentes formatos. CSV, Excel, PDF." />
				<IndexCard Icon={BarChart3} title="Estadísticas de Uso" description="Análisis de uso del sistema. Usuarios activos y accesos." />
			</section>
		</section>

	</main>
</Layout>
