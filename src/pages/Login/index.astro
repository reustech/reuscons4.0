---
import Layout from '../../layouts/Layout.astro';
import { LoginForm, LoginLeftPanel } from '../../components/Composed/Login/index.js';

// Handle form submission on server side
let errorMessage = '';
if (Astro.request.method === 'POST') {
	try {
		const data = await Astro.request.text();
		const params = new URLSearchParams(data);
		const username = params.get('username')?.trim() || '';
		const password = params.get('password')?.trim() || '';

		// Validate credentials
		if (!username || !password) {
			errorMessage = 'Por favor ingresa usuario y contraseña';
		} else if (username === 'admin' && password === 'admin') {
			// Set auth cookie for admin
			Astro.cookies.set('auth', JSON.stringify({ role: 'admin', username: 'admin' }), {
				secure: true,
				httpOnly: true,
				sameSite: 'strict',
				maxAge: 60 * 60 * 24, // 24 hours
			});
			return Astro.redirect('/DashboardAdmin');
		} else if (username === 'user' && password === 'user') {
			// Set auth cookie for regular user
			Astro.cookies.set('auth', JSON.stringify({ role: 'user', username: 'user' }), {
				secure: true,
				httpOnly: true,
				sameSite: 'strict',
				maxAge: 60 * 60 * 24, // 24 hours
			});
			return Astro.redirect('/DashboardUser');
		} else {
			errorMessage = 'Usuario o contraseña incorrectos. Intenta con admin/admin o user/user';
		}
	} catch (error) {
		errorMessage = 'Error procesando el formulario. Por favor intenta de nuevo.';
	}
}
---

<Layout title="Login">
	<style>
		body {
			background: #000;
			min-height: 100vh;
			display: flex;
			align-items: center;
			justify-content: center;
			padding: 0;
			margin: 0;
			overflow: hidden;
		}

		.login-wrapper {
			display: flex;
			width: 100%;
			height: 100vh;
			max-height: 100vh;
			overflow: hidden;
		}

		.login-left {
			flex: 1;
			background: linear-gradient(135deg, #1a0033 0%, #2d0052 25%, #3d0066 50%, #2d0052 75%, #1a0033 100%);
			position: relative;
			display: flex;
			align-items: center;
			justify-content: center;
			padding: 3rem;
			overflow: hidden;
		}

		.login-left::before {
			content: '';
			position: absolute;
			top: -50%;
			right: -50%;
			width: 200%;
			height: 200%;
			background:
				radial-gradient(circle at 20% 50%, rgba(255, 0, 150, 0.4) 0%, transparent 50%),
				radial-gradient(circle at 80% 80%, rgba(0, 100, 255, 0.3) 0%, transparent 50%);
			animation: float 20s ease-in-out infinite;
		}

		@keyframes float {
			0%, 100% {
				transform: translate(0, 0);
			}
			25% {
				transform: translate(-20px, -20px);
			}
			50% {
				transform: translate(20px, 20px);
			}
			75% {
				transform: translate(-10px, 10px);
			}
		}

		.login-left-content {
			position: relative;
			z-index: 1;
			color: white;
			text-align: center;
			max-width: 400px;
		}

		.login-left-content h2 {
			font-size: 1rem;
			letter-spacing: 3px;
			text-transform: uppercase;
			color: rgba(255, 255, 255, 0.6);
			margin-bottom: 2rem;
			font-weight: 400;
		}

		.login-left-content h1 {
			font-size: 4rem;
			line-height: 1.2;
			font-weight: 700;
			margin-bottom: 2rem;
			letter-spacing: -1px;
		}

		.login-left-content p {
			font-size: 1rem;
			line-height: 1.6;
			opacity: 0.9;
			margin: 0;
			font-weight: 300;
		}


		.login-right {
			flex: 1;
			background: white;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			padding: 3rem;
			position: relative;
		}


		.login-right-content {
			width: 100%;
			max-width: 380px;
		}

		.login-right h2 {
			font-size: 2.5rem;
			font-weight: 700;
			color: #1f2937;
			margin: 0 0 1rem 0;
			line-height: 1.2;
		}

		.login-right-subtitle {
			font-size: 0.95rem;
			color: #6b7280;
			margin-bottom: 2rem;
			line-height: 1.5;
		}

		.error-message {
			background-color: #fee2e2;
			border: 1px solid #fecaca;
			border-radius: 8px;
			color: #dc2626;
			padding: 1rem;
			margin-bottom: 1.5rem;
			font-size: 0.95rem;
			font-weight: 500;
		}

		.form-group {
			margin-bottom: 1.5rem;
		}

		.form-group label {
			display: block;
			font-size: 0.9rem;
			font-weight: 600;
			color: #1f2937;
			margin-bottom: 0.75rem;
		}

		.form-group input {
			width: 100%;
			padding: 0.875rem 1rem;
			border: 2px solid #e5e7eb;
			border-radius: 8px;
			font-size: 0.95rem;
			font-family: inherit;
			transition: all 0.3s ease;
			box-sizing: border-box;
			background: #f9fafb;
		}

		.form-group input:focus {
			outline: none;
			border-color: #667eea;
			background: white;
			box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
		}

		.form-group input::placeholder {
			color: #9ca3af;
		}

		.form-options {
			display: flex;
			align-items: center;
			justify-content: space-between;
			margin-bottom: 2rem;
			font-size: 0.9rem;
		}

		.form-options label {
			display: flex;
			align-items: center;
			gap: 0.5rem;
			cursor: pointer;
			color: #1f2937;
		}

		.form-options a {
			color: #667eea;
			text-decoration: none;
			transition: color 0.3s ease;
		}

		.form-options a:hover {
			color: #5568d3;
		}

		.btn-login {
			width: 100%;
			padding: 0.875rem 1rem;
			background: #1f2937;
			color: white;
			border: none;
			border-radius: 8px;
			font-size: 0.95rem;
			font-weight: 600;
			cursor: pointer;
			transition: all 0.3s ease;
			margin-bottom: 1rem;
		}

		.btn-login:hover {
			background: #111827;
			transform: translateY(-1px);
		}

		.btn-login:active {
			transform: translateY(0);
		}

		.btn-social {
			width: 100%;
			padding: 0.875rem 1rem;
			background: white;
			border: 2px solid #e5e7eb;
			border-radius: 8px;
			font-size: 0.95rem;
			font-weight: 600;
			color: #1f2937;
			cursor: pointer;
			transition: all 0.3s ease;
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 0.75rem;
		}

		.btn-social:hover {
			background: #f9fafb;
			border-color: #d1d5db;
		}

		.login-footer {
			margin-top: 1.5rem;
			text-align: center;
			font-size: 0.9rem;
			color: #6b7280;
		}

		.login-footer a {
			color: #667eea;
			text-decoration: none;
			font-weight: 600;
			transition: color 0.3s ease;
		}

		.login-footer a:hover {
			color: #5568d3;
		}

		.test-credentials {
			margin-top: 2rem;
			padding-top: 1.5rem;
			border-top: 1px solid #e5e7eb;
			font-size: 0.8rem;
			color: #9ca3af;
			text-align: center;
		}

		.test-credentials p {
			margin: 0.3rem 0;
		}

		.test-credentials strong {
			color: #667eea;
		}

		@media (max-width: 1024px) {
			.login-wrapper {
				flex-direction: column;
				height: auto;
			}

			.login-left {
				min-height: 300px;
				padding: 2rem;
			}

			.login-left-content h1 {
				font-size: 2.5rem;
			}

			.login-right {
				min-height: auto;
				padding: 2rem;
			}

			.login-right h2 {
				font-size: 2rem;
			}
		}

		@media (max-width: 640px) {
			.login-wrapper {
				flex-direction: column;
			}

			.login-left {
				min-height: 250px;
				padding: 2rem 1rem;
			}

			.login-left-content h1 {
				font-size: 2rem;
			}

			.login-left-content h2 {
				font-size: 0.8rem;
			}

			.login-right {
				padding: 1.5rem;
			}

			.login-right h2 {
				font-size: 1.75rem;
			}
		}
	</style>

	<div class="login-wrapper" style="display: flex; width: 100%; height: 100vh; max-height: 100vh; overflow: hidden;">
		<div class="login-left" style="flex: 1; background: linear-gradient(135deg, #1a0033 0%, #2d0052 25%, #3d0066 50%, #2d0052 75%, #1a0033 100%); position: relative; display: flex; align-items: center; justify-content: center; padding: 3rem; overflow: hidden;">
			<div class="login-left-content">
				<LoginLeftPanel client:load />
			</div>
		</div>

		<div class="login-right" style="flex: 1; background: white; display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 3rem; position: relative;">
			<div class="login-right-content">
				<LoginForm errorMessage={errorMessage} client:load />
			</div>
		</div>
	</div>
</Layout>
