---
import Layout from '../layouts/Layout.astro';
import IndexCard from '../components/ui/IndexCard.jsx';

import {
  SquareKanban,
  FileText,
  Building2,
  CheckCircle,
  Calendar,
  Eye,
  Download,
  Upload,
  Share2,
  Lock,
  Settings,
  Bookmark,
  Archive,
  Activity,
  Briefcase,
  Award,
  ListTodo,
  Folder,
  User,
  Clock,
  TrendingUp
} from 'lucide-react';
---

<Layout title="Dashboard de Usuario - Reuscons">

	<main class="container">
		<section style={{ textAlign: 'center', marginBottom: '3rem' }}>
			<h1>Mi Dashboard</h1>
			<p style={{ fontSize: '1.125rem', marginBottom: '2rem' }}>
				Acceso rápido a tus herramientas y proyectos
			</p>
		</section>

		<!-- MIS TAREAS Y PROYECTOS -->
		<section style={{ marginBottom: '4rem' }}>
			<h2 style={{ marginBottom: '1.5rem', borderBottom: '2px solid var(--primary)', paddingBottom: '0.5rem', display: 'flex', alignItems: 'center', gap: '0.75rem' }}>
				<ListTodo size={48} /> Mis Tareas y Proyectos
			</h2>
			<section style={{
				display: 'grid',
				gridTemplateColumns: 'repeat(3, 1fr)',
				gap: '1rem'
			}}>
				<IndexCard Icon={SquareKanban} title="Mis Tableros" description="Ver todos mis tableros Kanban personales. Acceder rápidamente a mis proyectos." />
				<IndexCard Icon={CheckCircle} title="Mis Tareas" description="Listar mis tareas pendientes y completadas. Filtrar por estado y fecha." />
				<IndexCard Icon={Clock} title="Tareas Urgentes" description="Ver tareas próximas a vencer. Alertas de tareas críticas." />
				<IndexCard Icon={Building2} title="Mis Proyectos" description="Proyectos en los que participo. Ver avance y detalles." />
				<IndexCard Icon={TrendingUp} title="Mi Progreso" description="Estadísticas personales de productividad. Gráficos de desempeño." />
				<IndexCard Icon={Calendar} title="Cronograma Personal" description="Calendario de mis tareas y eventos. Recordatorios automáticos." />
			</section>
		</section>

		<!-- MIS ARCHIVOS Y DOCUMENTOS -->
		<section style={{ marginBottom: '4rem' }}>
			<h2 style={{ marginBottom: '1.5rem', borderBottom: '2px solid var(--primary)', paddingBottom: '0.5rem', display: 'flex', alignItems: 'center', gap: '0.75rem' }}>
				<Folder size={48} /> Mis Archivos y Documentos
			</h2>
			<section style={{
				display: 'grid',
				gridTemplateColumns: 'repeat(3, 1fr)',
				gap: '1rem'
			}}>
				<IndexCard Icon={FileText} title="Mis Archivos" description="Acceder a mis archivos personales. Organizados por proyecto." />
				<IndexCard Icon={Upload} title="Subir Archivo" description="Compartir nuevo archivo con el equipo. Control de versiones." />
				<IndexCard Icon={Download} title="Descargar" description="Descargar archivos compartidos. Historial de descargas." />
				<IndexCard Icon={Bookmark} title="Favoritos" description="Mis archivos y documentos favoritos. Acceso rápido." />
				<IndexCard Icon={Archive} title="Archivados" description="Archivos archivados por mí. Recuperar si es necesario." />
				<IndexCard Icon={Share2} title="Compartidos Conmigo" description="Archivos compartidos por otros. Ver permisos y propietario." />
			</section>
		</section>

		<!-- MI CUENTA Y PERFIL -->
		<section style={{ marginBottom: '4rem' }}>
			<h2 style={{ marginBottom: '1.5rem', borderBottom: '2px solid var(--primary)', paddingBottom: '0.5rem', display: 'flex', alignItems: 'center', gap: '0.75rem' }}>
				<User size={48} /> Mi Cuenta y Perfil
			</h2>
			<section style={{
				display: 'grid',
				gridTemplateColumns: 'repeat(3, 1fr)',
				gap: '1rem'
			}}>
				<IndexCard Icon={Eye} title="Mi Perfil" description="Ver y editar mi perfil personal. Foto, información de contacto." />
				<IndexCard Icon={Lock} title="Cambiar Contraseña" description="Cambiar mi contraseña de manera segura. Validaciones de seguridad." />
				<IndexCard Icon={Settings} title="Preferencias" description="Configurar mis preferencias personales. Idioma, zona horaria." />
				<IndexCard Icon={Activity} title="Mi Actividad" description="Ver mi historial de actividades. Auditoría personal." />
				<IndexCard Icon={Briefcase} title="Mi Rol" description="Ver mi rol y responsabilidades. Permisos asignados." />
				<IndexCard Icon={Award} title="Mis Logros" description="Badges y reconocimientos obtenidos. Metas alcanzadas." />
			</section>
		</section>


	</main>
</Layout>
