  "schema": {
    "description": "Obras (Projects/Works) schema for MongoDB with Mongoose",
    "fields": {
      "_id": {
        "type": "ObjectId",
        "description": "Identificador único de la obra (generado automáticamente por MongoDB)",
        "required": true
      },
      "name": {
        "type": "String",
        "description": "Nombre o título de la obra",
        "required": true,
        "maxlength": 150
      },
      "description": {
        "type": "String",
        "description": "Descripción detallada de la obra",
        "default": null,
        "maxlength": 1000
      },
      "location": {
        "type": "String",
        "description": "Ubicación general de la obra (ciudad, región)",
        "required": true,
        "maxlength": 150
      },
      "address": {
        "type": "String",
        "description": "Dirección completa de la obra",
        "default": null,
        "maxlength": 250
      },
      "client": {
        "type": "String",
        "description": "Nombre del cliente o empresa contratante",
        "required": true,
        "maxlength": 150
      },
      "userId": {
        "type": "ObjectId",
        "description": "Referencia al usuario gerente/propietario de la obra",
        "required": true,
        "ref": "User"
      },
      "status": {
        "type": "String",
        "description": "Estado actual de la obra",
        "enum": ["planning", "in-progress", "on-hold", "completed", "cancelled"],
        "default": "planning",
        "required": true
      },
      "startDate": {
        "type": "Date",
        "description": "Fecha de inicio de la obra",
        "required": true
      },
      "endDate": {
        "type": "Date",
        "description": "Fecha de finalización estimada o real",
        "required": true
      },
      "budget": {
        "type": "Number",
        "description": "Presupuesto total de la obra en euros",
        "required": true,
        "min": 0
      },
      "spent": {
        "type": "Number",
        "description": "Monto gastado hasta el momento en euros",
        "default": 0,
        "min": 0
      },
      "progress": {
        "type": "Number",
        "description": "Porcentaje de progreso de la obra (0-100)",
        "default": 0,
        "min": 0,
        "max": 100
      },
      "team": {
        "type": "Array",
        "description": "Array de IDs de usuarios asignados a la obra",
        "items": {
          "type": "ObjectId",
          "ref": "User"
        },
        "default": []
      },
      "kanban_id": {
        "type": "ObjectId",
        "description": "Referencia al tablero Kanban asociado para gestionar tareas de la obra",
        "default": null,
        "ref": "KanbanBoard"
      },
      "tags": {
        "type": "Array",
        "description": "Etiquetas para categorizar la obra",
        "items": {
          "type": "String",
          "maxlength": 30
        },
        "default": []
      },
      "priority": {
        "type": "String",
        "description": "Nivel de prioridad de la obra",
        "enum": ["low", "medium", "high"],
        "default": "medium"
      },
      "notes": {
        "type": "String",
        "description": "Notas o comentarios adicionales sobre la obra",
        "default": null,
        "maxlength": 500
      }
    },
    "indexes": [
      {
        "field": "userId",
        "description": "Índice para consultas rápidas por usuario gerente"
      },
      {
        "field": "status",
        "description": "Índice para filtrar obras por estado"
      },
      {
        "field": "kanban_id",
        "description": "Índice para obtener obras asociadas a un Kanban"
      },
      {
        "fields": ["userId", "status"],
        "description": "Índice compuesto para obtener obras de un usuario en un estado específico"
      },
      {
        "field": "client",
        "description": "Índice para búsqueda rápida por cliente"
      }
    ]
  }
}
