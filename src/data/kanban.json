  "schema": {
    "description": "Kanban Board schema for MongoDB with Mongoose",
    "fields": {
      "_id": {
        "type": "ObjectId",
        "description": "Identificador único del tablero Kanban (generado automáticamente por MongoDB)",
        "required": true
      },
      "name": {
        "type": "String",
        "description": "Nombre del tablero Kanban",
        "required": true,
        "maxlength": 100
      },
      "description": {
        "type": "String",
        "description": "Descripción del tablero Kanban",
        "default": null,
        "maxlength": 500
      },
      "userId": {
        "type": "ObjectId",
        "description": "Referencia al usuario propietario del tablero",
        "required": true,
        "ref": "User"
      },
      "columns": {
        "type": "Array",
        "description": "Array de columnas del tablero Kanban",
        "required": true,
        "items": {
          "type": "Object",
          "fields": {
            "key": {
              "type": "String",
              "description": "Identificador único de la columna",
              "required": true,
              "maxlength": 50
            },
            "title": {
              "type": "String",
              "description": "Título de la columna",
              "required": true,
              "maxlength": 50
            },
            "color": {
              "type": "String",
              "description": "Color hexadecimal de la columna",
              "required": true,
              "match": "/^#[0-9A-Fa-f]{6}$/"
            },
            "order": {
              "type": "Number",
              "description": "Orden de la columna",
              "required": true
            }
          }
        }
      },
      "isPublic": {
        "type": "Boolean",
        "description": "Indica si el tablero es público o privado",
        "default": false
      },
      "collaborators": {
        "type": "Array",
        "description": "Array de IDs de usuarios colaboradores",
        "items": {
          "type": "ObjectId",
          "ref": "User"
        },
        "default": []
      },
      "settings": {
        "type": "Object",
        "description": "Configuración del tablero Kanban",
        "fields": {
          "allowComments": {
            "type": "Boolean",
            "description": "Permitir comentarios en las tareas",
            "default": true
          },
          "allowAttachments": {
            "type": "Boolean",
            "description": "Permitir adjuntos en las tareas",
            "default": true
          },
          "showEstimates": {
            "type": "Boolean",
            "description": "Mostrar estimaciones de tiempo en las tareas",
            "default": true
          }
        }
      }
    },
    "indexes": [
      {
        "field": "userId",
        "description": "Índice para consultas rápidas por usuario propietario"
      },
      {
        "fields": ["userId", "_id"],
        "description": "Índice compuesto para obtener un tablero específico de un usuario"
      }
    ]
  }
