        "default": null,
        "maxlength": 500
      },
      "columns": {
        "type": "Array",
        "description": "Array de columnas del tablero Kanban",
        "required": true,
        "items": {
          "type": "Object",
          "fields": {
            "key": {
              "type": "String",
              "description": "Identificador único de la columna",
              "required": true,
              "maxlength": 50
            },
            "title": {
              "type": "String",
              "description": "Título de la columna",
              "required": true,
              "maxlength": 50
            },
            "color": {
              "type": "String",
              "description": "Color hexadecimal de la columna",
              "required": true,
              "match": "/^#[0-9A-Fa-f]{6}$/"
            },
            "order": {
              "type": "Number",
              "description": "Orden de la columna",
              "required": true
            }
          }
        }
      },
      "isPublic": {
        "type": "Boolean",
        "description": "Indica si el tablero es público o privado",
