---
// CreateProjectModal.astro
---

<div class="modal" id="createProjectModal">
  <article>
    <a href="#close" aria-label="Close" class="close"></a>
    <h3>Crear Nuevo Proyecto</h3>

    <form>
      <div>
        <label for="projectName">Nombre del Proyecto *</label>
        <input
          id="projectName"
          name="name"
          type="text"
          placeholder="Ej: Sistema de Gestión"
          required
        />
      </div>

      <div>
        <label for="projectDescription">Descripción</label>
        <textarea
          id="projectDescription"
          name="description"
          placeholder="Descripción del proyecto..."
        ></textarea>
      </div>

      <div>
        <label for="projectStatus">Estado</label>
        <select id="projectStatus" name="status">
          <option value="Activo">Activo</option>
          <option value="Pausado">Pausado</option>
          <option value="Completado">Completado</option>
          <option value="Cancelado">Cancelado</option>
        </select>
      </div>

      <div>
        <label for="projectBudget">Presupuesto</label>
        <input
          id="projectBudget"
          name="budget"
          type="number"
          placeholder="0"
        />
      </div>

      <div>
        <label for="projectManager">Gerente del Proyecto</label>
        <input
          id="projectManager"
          name="manager"
          type="text"
          placeholder="Nombre del gerente"
        />
      </div>

      <div>
        <a href="#close" role="button" class="secondary">Cancelar</a>
        <button type="submit">Crear Proyecto</button>
      </div>
    </form>
  </article>
</div>
