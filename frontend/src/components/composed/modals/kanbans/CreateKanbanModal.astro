---
// CreateKanbanModal.astro
---

<div class="modal" id="createKanbanModal">
  <article>
    <a href="#close" aria-label="Close" class="close"></a>
    <h3>Crear Nuevo Tablero Kanban</h3>

    <form>
      <div>
        <label for="kanbanName">Nombre del Tablero *</label>
        <input
          id="kanbanName"
          name="name"
          type="text"
          placeholder="Ej: Gestión de Tareas"
          required
        />
      </div>

      <div>
        <label for="kanbanDescription">Descripción</label>
        <textarea
          id="kanbanDescription"
          name="description"
          placeholder="Descripción del tablero..."
        ></textarea>
      </div>

      <div>
        <a href="#close" role="button" class="secondary">Cancelar</a>
        <button type="submit">Crear Tablero</button>
      </div>
    </form>
  </article>
</div>
