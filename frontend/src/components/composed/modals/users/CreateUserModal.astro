---
// CreateUserModal.astro
---

<div class="modal" id="createUserModal">
  <article>
    <a href="#close" aria-label="Close" class="close"></a>
    <h3>Crear Nuevo Usuario</h3>

    <form>
      <div>
        <label for="username">Nombre de Usuario *</label>
        <input
          id="username"
          name="username"
          type="text"
          placeholder="john_doe"
          required
        />
      </div>

      <div>
        <label for="password">Contraseña *</label>
        <input
          id="password"
          name="password"
          type="password"
          placeholder="••••••••"
          required
        />
      </div>

      <div>
        <label for="firstName">Nombre *</label>
        <input
          id="firstName"
          name="firstName"
          type="text"
          placeholder="John"
          required
        />
      </div>

      <div>
        <label for="lastName">Apellido *</label>
        <input
          id="lastName"
          name="lastName"
          type="text"
          placeholder="Doe"
          required
        />
      </div>

      <div>
        <label for="email">Email *</label>
        <input
          id="email"
          name="email"
          type="email"
          placeholder="john@example.com"
          required
        />
      </div>

      <div>
        <label for="activeUser">
          <input
            id="activeUser"
            name="active"
            type="checkbox"
            checked
          />
          Usuario Activo
        </label>
      </div>

      <div>
        <a href="#close" role="button" class="secondary">Cancelar</a>
        <button type="submit">Crear Usuario</button>
      </div>
    </form>
  </article>
</div>
